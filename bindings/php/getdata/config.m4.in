PHP_ARG_ENABLE(getdata, for getdata support,
[  --enable-getdata               Include GetData support])

if test "$PHP_GETDATA" != "no"; then
  PHP_ADD_INCLUDE(@top_srcdir@/src)

  dnl this doesn't seem to be the right way to do this, but it does
  dnl appear to result in libtool finding libgetdata.la when building
  dnl this extension, so...
  PHP_ADD_LIBPATH(@top_builddir@/src)
  PHP_ADD_LIBRARY_DEFER(getdata, @top_builddir@/src, GETDATA_SHARED_LIBADD)

  dnl track headers
  GETDATA_SHARED_DEPENDENCIES="php_getdata.h @top_builddir@/src/getdata.h @top_srcdir@/src/internal.h"

  CC=@CC@
  EXTRA_CFLAGS="@GD_CC_WALL@ @GD_CC_WEXTRA@"

  dnl substify things
  PHP_SUBST(EXTRA_CFLAGS)
  PHP_SUBST(GETDATA_SHARED_DEPENDENCIES)
  PHP_SUBST(GETDATA_SHARED_LIBADD)

  dnl define the extension
  PHP_NEW_EXTENSION(getdata, getdata.c constants.c, $ext_shared)
fi

dnl Override the EXTENSION_DIR based on the user input to the
dnl (top level) getdata configure script
EXTENSION_DIR=@phpdir@
